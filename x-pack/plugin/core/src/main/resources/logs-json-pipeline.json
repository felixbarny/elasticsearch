{
  "processors": [
    {
      "rename": {
        "field": "message",
        "target_field": "_json_message",
        "ignore_missing": true
      }
    },
    {
      "json": {
        "field": "_json_message",
        "add_to_root": true,
        "add_to_root_conflict_strategy": "merge",
        "allow_duplicate_keys": true,
        "if": "ctx.containsKey('_json_message')",
        "on_failure": [
          {
            "rename": {
              "field": "_json_message",
              "target_field": "message",
              "ignore_missing": true
            }
          },
          {
            "set": {
              "field": "error.message",
              "value": "Error while parsing JSON",
              "override": false
            }
          }
        ]
      }
    },
    {
      "remove": {
        "field": "_json_message",
        "ignore_missing": true
      }
    },
    {
      "dot_expander": {
        "field": "*",
        "override": true
      }
    }
  ],
  "version": ${xpack.stack.template.version}
}
